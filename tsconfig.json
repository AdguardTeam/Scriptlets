        "target": "esnext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": true,
        "strict": true,
        "lib":["DOM"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "scriptlets-func": ["./tmp/scriptlets-func"]
