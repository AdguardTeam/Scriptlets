'use strict';

var constants = require('../../utils/constants.js');
var valueSerializer = require('./value-serializer.js');
var typeGuards = require('../../utils/type-guards.js');
var baseSerializer = require('../base-serializer.js');
var modifierCommon = require('../../marshalling-utils/misc/modifier-common.js');
var binaryTypeCommon = require('../../marshalling-utils/misc/binary-type-common.js');

/**
 * `ModifierSerializer` is responsible for serializing modifiers.
 *
 * @example
 * `match-case`, `~third-party`, `domain=example.com|~example.org`
 */
class ModifierSerializer extends baseSerializer.BaseSerializer {
    /**
     * Serializes a modifier node to binary format.
     *
     * @param node Node to serialize.
     * @param buffer ByteBuffer for writing binary data.
     */
    static serialize(node, buffer) {
        buffer.writeUint8(binaryTypeCommon.BinaryTypeMarshallingMap.ModifierNode);
        buffer.writeUint8(modifierCommon.ModifierNodeMarshallingMap.Name);
        valueSerializer.ValueSerializer.serialize(node.name, buffer, modifierCommon.FREQUENT_MODIFIERS_SERIALIZATION_MAP);
        if (!typeGuards.isUndefined(node.value)) {
            buffer.writeUint8(modifierCommon.ModifierNodeMarshallingMap.Value);
            valueSerializer.ValueSerializer.serialize(node.value, buffer, modifierCommon.FREQUENT_REDIRECT_MODIFIERS_SERIALIZATION_MAP.get(node.name.value));
        }
        buffer.writeUint8(modifierCommon.ModifierNodeMarshallingMap.Exception);
        buffer.writeUint8(node.exception ? 1 : 0);
        if (!typeGuards.isUndefined(node.start)) {
            buffer.writeUint8(modifierCommon.ModifierNodeMarshallingMap.Start);
            buffer.writeUint32(node.start);
        }
        if (!typeGuards.isUndefined(node.end)) {
            buffer.writeUint8(modifierCommon.ModifierNodeMarshallingMap.End);
            buffer.writeUint32(node.end);
        }
        buffer.writeUint8(constants.NULL);
    }
}

exports.ModifierSerializer = ModifierSerializer;
