'use strict';

var index = require('../../nodes/index.js');
var constants = require('../../utils/constants.js');
var ruleConverterBase = require('../base-interfaces/rule-converter-base.js');
var clone = require('../../utils/clone.js');
var conversionResult = require('../base-interfaces/conversion-result.js');

/**
 * @file Comment rule converter
 */
/**
 * Comment rule converter class
 *
 * @todo Implement `convertToUbo` and `convertToAbp`
 */
class CommentRuleConverter extends ruleConverterBase.RuleConverterBase {
    /**
     * Converts a comment rule to AdGuard format, if possible.
     *
     * @param rule Rule node to convert
     * @returns An object which follows the {@link NodeConversionResult} interface. Its `result` property contains
     * the array of converted rule nodes, and its `isConverted` flag indicates whether the original rule was converted.
     * If the rule was not converted, the result array will contain the original node with the same object reference
     * @throws If the rule is invalid or cannot be converted
     */
    static convertToAdg(rule) {
        // TODO: Add support for other comment types, if needed
        // Main task is # -> ! conversion
        switch (rule.type) {
            case index.CommentRuleType.CommentRule:
                // Check if the rule needs to be converted
                if (rule.type === index.CommentRuleType.CommentRule && rule.marker.value === index.CommentMarker.Hashmark) {
                    // Add a ! to the beginning of the comment
                    // TODO: Replace with custom clone method
                    const ruleClone = clone.clone(rule);
                    ruleClone.marker.value = index.CommentMarker.Regular;
                    // Add the hashmark to the beginning of the comment text
                    ruleClone.text.value = `${constants.SPACE}${index.CommentMarker.Hashmark}${ruleClone.text.value}`;
                    return conversionResult.createNodeConversionResult([ruleClone], true);
                }
                return conversionResult.createNodeConversionResult([rule], false);
            // Leave any other comment rule as is
            default:
                return conversionResult.createNodeConversionResult([rule], false);
        }
    }
}

exports.CommentRuleConverter = CommentRuleConverter;
