'use strict';

var baseGenerator = require('../base-generator.js');
var constants = require('../../utils/constants.js');
var modifierGenerator = require('./modifier-generator.js');

class ModifierListGenerator extends baseGenerator.BaseGenerator {
    /**
     * Converts a modifier list AST to a string.
     *
     * @param ast Modifier list AST
     * @returns Raw string
     */
    static generate(ast) {
        const result = ast.children
            .map(modifierGenerator.ModifierGenerator.generate)
            .join(constants.MODIFIERS_SEPARATOR);
        return result;
    }
}

exports.ModifierListGenerator = ModifierListGenerator;
