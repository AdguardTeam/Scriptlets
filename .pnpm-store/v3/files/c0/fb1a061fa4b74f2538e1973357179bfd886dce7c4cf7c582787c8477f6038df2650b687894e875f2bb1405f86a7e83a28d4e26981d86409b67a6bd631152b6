'use strict';

var baseGenerator = require('../base-generator.js');
var constants = require('../../utils/constants.js');
var valueGenerator = require('../misc/value-generator.js');

class SimpleCommentGenerator extends baseGenerator.BaseGenerator {
    /**
     * Converts a comment rule node to a string.
     *
     * @param node Comment rule node.
     * @returns Raw string.
     */
    static generate(node) {
        let result = constants.EMPTY;
        result += valueGenerator.ValueGenerator.generate(node.marker);
        result += valueGenerator.ValueGenerator.generate(node.text);
        return result;
    }
}

exports.SimpleCommentGenerator = SimpleCommentGenerator;
