'use strict';

var syntaxSerializationMap = require('../marshalling-utils/syntax-serialization-map.js');

/**
 * Value map for binary deserialization. This helps to reduce the size of the serialized data,
 * as it allows us to use a single byte to represent frequently used values.
 */
let syntaxDeserializationMap;
const getSyntaxDeserializationMap = () => {
    if (!syntaxDeserializationMap) {
        syntaxDeserializationMap = new Map(Array.from(syntaxSerializationMap.getSyntaxSerializationMap(), ([key, value]) => [value, key]));
    }
    return syntaxDeserializationMap;
};

exports.getSyntaxDeserializationMap = getSyntaxDeserializationMap;
