'use strict';

var baseGenerator = require('../base-generator.js');
var constants = require('../../utils/constants.js');
var hintGenerator = require('./hint-generator.js');

class HintCommentGenerator extends baseGenerator.BaseGenerator {
    /**
     * Converts a hint rule node to a raw string.
     *
     * @param node Hint rule node
     * @returns Raw string
     */
    static generate(node) {
        let result = constants.HINT_MARKER + constants.SPACE;
        result += node.children.map(hintGenerator.HintGenerator.generate).join(constants.SPACE);
        return result;
    }
}

exports.HintCommentGenerator = HintCommentGenerator;
