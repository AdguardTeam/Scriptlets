'use strict';

var constants = require('../../utils/constants.js');
var index = require('../../nodes/index.js');
var valueDeserializer = require('../misc/value-deserializer.js');
var hostnameListDeserializer = require('./hostname-list-deserializer.js');
var baseDeserializer = require('../base-deserializer.js');
var hostRuleCommon = require('../../marshalling-utils/misc/host-rule-common.js');
var adblockers = require('../../utils/adblockers.js');
var binaryTypeCommon = require('../../marshalling-utils/misc/binary-type-common.js');
var syntaxDeserializationMap = require('../syntax-deserialization-map.js');

/* eslint-disable no-param-reassign */
/**
 * `HostRuleSerializer` is responsible for serializing hosts-like rules.
 *
 * HostRule is a structure for simple host-level rules (i.e. /etc/hosts syntax).
 * It also supports "just domain" syntax. In this case, the IP will be set to 0.0.0.0.
 *
 * Rules syntax looks like this:
 * ```text
 * IP_address canonical_hostname [aliases...]
 * ```
 *
 * @example
 * `192.168.1.13 bar.mydomain.org bar` -- ipv4
 * `ff02::1 ip6-allnodes` -- ipv6
 * `::1 localhost ip6-localhost ip6-loopback` -- ipv6 aliases
 * `example.org` -- "just domain" syntax
 * @see {@link http://man7.org/linux/man-pages/man5/hosts.5.html}
 */
class HostRuleDeserializer extends baseDeserializer.BaseDeserializer {
    /**
     * Deserializes a modifier node from binary format.
     *
     * @param buffer ByteBuffer for reading binary data.
     * @param node Destination node.
     */
    static deserialize(buffer, node) {
        buffer.assertUint8(binaryTypeCommon.BinaryTypeMarshallingMap.HostRuleNode);
        node.category = index.RuleCategory.Network;
        node.type = index.NetworkRuleType.HostRule;
        let prop = buffer.readUint8();
        while (prop !== constants.NULL) {
            switch (prop) {
                case hostRuleCommon.HostRuleMarshallingMap.Syntax:
                    node.syntax = syntaxDeserializationMap.getSyntaxDeserializationMap().get(buffer.readUint8()) ?? adblockers.AdblockSyntax.Common;
                    break;
                case hostRuleCommon.HostRuleMarshallingMap.Ip:
                    node.ip = {};
                    valueDeserializer.ValueDeserializer.deserialize(buffer, node.ip);
                    break;
                case hostRuleCommon.HostRuleMarshallingMap.HostnameList:
                    node.hostnames = {};
                    hostnameListDeserializer.HostnameListDeserializer.deserialize(buffer, node.hostnames);
                    break;
                case hostRuleCommon.HostRuleMarshallingMap.Comment:
                    node.comment = {};
                    valueDeserializer.ValueDeserializer.deserialize(buffer, node.comment);
                    break;
                case hostRuleCommon.HostRuleMarshallingMap.Start:
                    node.start = buffer.readUint32();
                    break;
                case hostRuleCommon.HostRuleMarshallingMap.End:
                    node.end = buffer.readUint32();
                    break;
                default:
                    throw new Error(`Invalid property: ${prop}.`);
            }
            prop = buffer.readUint8();
        }
    }
}

exports.HostRuleDeserializer = HostRuleDeserializer;
