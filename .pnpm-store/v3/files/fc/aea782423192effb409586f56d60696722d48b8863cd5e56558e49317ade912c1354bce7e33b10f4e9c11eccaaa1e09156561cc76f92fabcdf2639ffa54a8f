'use strict';

var constants = require('../../utils/constants.js');
var valueGenerator = require('../misc/value-generator.js');
var baseGenerator = require('../base-generator.js');

class MetadataCommentGenerator extends baseGenerator.BaseGenerator {
    /**
     * Converts a metadata comment rule node to a string.
     *
     * @param node Metadata comment rule node.
     * @returns Raw string.
     */
    static generate(node) {
        let result = constants.EMPTY;
        result += valueGenerator.ValueGenerator.generate(node.marker);
        result += constants.SPACE;
        result += valueGenerator.ValueGenerator.generate(node.header);
        result += constants.COLON;
        result += constants.SPACE;
        result += valueGenerator.ValueGenerator.generate(node.value);
        return result;
    }
}

exports.MetadataCommentGenerator = MetadataCommentGenerator;
