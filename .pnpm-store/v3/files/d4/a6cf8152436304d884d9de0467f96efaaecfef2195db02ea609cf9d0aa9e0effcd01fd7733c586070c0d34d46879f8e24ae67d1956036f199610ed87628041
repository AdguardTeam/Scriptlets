'use strict';

var valueDeserializer = require('../misc/value-deserializer.js');
var constants = require('../../utils/constants.js');
var baseDeserializer = require('../base-deserializer.js');
var cssInjectionBodyCommon = require('../../marshalling-utils/cosmetic/body/css-injection-body-common.js');
var binaryTypeCommon = require('../../marshalling-utils/misc/binary-type-common.js');

class CssInjectionBodyDeserializer extends baseDeserializer.BaseDeserializer {
    /**
     * Deserializes CSS injection rule body node from binary format.
     *
     * @param buffer ByteBuffer for reading binary data.
     * @param node Destination node.
     */
    static deserialize(buffer, node) {
        buffer.assertUint8(binaryTypeCommon.BinaryTypeMarshallingMap.CssInjectionRuleBody);
        node.type = 'CssInjectionRuleBody';
        node.remove = false;
        let prop = buffer.readUint8();
        while (prop !== constants.NULL) {
            switch (prop) {
                case cssInjectionBodyCommon.CssInjectionRuleMarshallingMap.MediaQueryList:
                    valueDeserializer.ValueDeserializer.deserialize(buffer, node.mediaQueryList = {});
                    break;
                case cssInjectionBodyCommon.CssInjectionRuleMarshallingMap.SelectorList:
                    valueDeserializer.ValueDeserializer.deserialize(buffer, node.selectorList = {});
                    break;
                case cssInjectionBodyCommon.CssInjectionRuleMarshallingMap.DeclarationList:
                    valueDeserializer.ValueDeserializer.deserialize(buffer, node.declarationList = {});
                    break;
                case cssInjectionBodyCommon.CssInjectionRuleMarshallingMap.Remove:
                    node.remove = true;
                    break;
                case cssInjectionBodyCommon.CssInjectionRuleMarshallingMap.Start:
                    node.start = buffer.readUint32();
                    break;
                case cssInjectionBodyCommon.CssInjectionRuleMarshallingMap.End:
                    node.end = buffer.readUint32();
                    break;
                default:
                    throw new Error(`Unknown property: ${prop}`);
            }
            prop = buffer.readUint8();
        }
    }
}

exports.CssInjectionBodyDeserializer = CssInjectionBodyDeserializer;
