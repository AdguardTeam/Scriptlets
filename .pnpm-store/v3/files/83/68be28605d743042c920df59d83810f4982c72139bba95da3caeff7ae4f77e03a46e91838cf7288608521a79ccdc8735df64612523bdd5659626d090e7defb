'use strict';

var zod = require('zod');
var zodCamelcase = require('../utils/zod-camelcase.js');
var base = require('./base.js');
var resourceType = require('./resource-type.js');

/**
 * @file Schema for redirect data.
 */
/**
 * Zod schema for redirect data.
 */
zodCamelcase.zodToCamelCase(base.baseCompatibilityDataSchema.extend({
    /**
     * Whether the redirect is blocking.
     */
    is_blocking: base.booleanSchema.default(false),
    /**
     * Resource type(s) belonging to the redirect.
     *
     * @see {@link https://developer.chrome.com/docs/extensions/reference/declarativeNetRequest/#type-ResourceType}
     */
    resource_types: zod.array(resourceType.resourceTypeSchema).default([]),
}).superRefine(base.baseRefineLogic));
