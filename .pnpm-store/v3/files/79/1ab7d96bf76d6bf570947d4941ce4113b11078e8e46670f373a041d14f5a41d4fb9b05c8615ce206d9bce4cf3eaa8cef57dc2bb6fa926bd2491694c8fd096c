'use strict';

var baseDeserializer = require('../base-deserializer.js');
var constants = require('../../utils/constants.js');
var elementHidingBodyCommon = require('../../marshalling-utils/cosmetic/body/element-hiding-body-common.js');
var valueDeserializer = require('../misc/value-deserializer.js');
var binaryTypeCommon = require('../../marshalling-utils/misc/binary-type-common.js');

/* eslint-disable no-param-reassign */
class ElementHidingBodyDeserializer extends baseDeserializer.BaseDeserializer {
    /**
     * Deserializes an element hiding rule body node from binary format.
     *
     * @param buffer ByteBuffer for reading binary data.
     * @param node Destination node.
     */
    static deserializeElementHidingBody(buffer, node) {
        buffer.assertUint8(binaryTypeCommon.BinaryTypeMarshallingMap.ElementHidingRuleBody);
        node.type = 'ElementHidingRuleBody';
        let prop = buffer.readUint8();
        while (prop !== constants.NULL) {
            switch (prop) {
                case elementHidingBodyCommon.ElementHidingRuleMarshallingMap.SelectorList:
                    valueDeserializer.ValueDeserializer.deserialize(buffer, node.selectorList = {});
                    break;
                case elementHidingBodyCommon.ElementHidingRuleMarshallingMap.Start:
                    node.start = buffer.readUint32();
                    break;
                case elementHidingBodyCommon.ElementHidingRuleMarshallingMap.End:
                    node.end = buffer.readUint32();
                    break;
                default:
                    throw new Error(`Unknown property: ${prop}`);
            }
            prop = buffer.readUint8();
        }
    }
}

exports.ElementHidingBodyDeserializer = ElementHidingBodyDeserializer;
