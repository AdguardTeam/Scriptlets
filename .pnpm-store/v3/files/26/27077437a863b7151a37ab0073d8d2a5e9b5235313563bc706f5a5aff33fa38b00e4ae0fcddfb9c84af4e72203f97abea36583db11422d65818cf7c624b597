'use strict';

var constants = require('../../utils/constants.js');
var parameterListSerializer = require('../misc/parameter-list-serializer.js');
var valueSerializer = require('../misc/value-serializer.js');
var typeGuards = require('../../utils/type-guards.js');
var baseSerializer = require('../base-serializer.js');
var hintCommon = require('../../marshalling-utils/comment/hint-common.js');
var binaryTypeCommon = require('../../marshalling-utils/misc/binary-type-common.js');

/**
 * `HintSerializer` is responsible for serializing AdGuard hints.
 *
 * @example
 * If the hint rule is
 * ```adblock
 * !+ NOT_OPTIMIZED PLATFORM(windows)
 * ```
 * then the hints are `NOT_OPTIMIZED` and `PLATFORM(windows)`, and this
 * class is responsible for parsing them. The rule itself is parsed by
 * the `HintRuleParser`, which uses this class to parse single hints.
 */
class HintSerializer extends baseSerializer.BaseSerializer {
    /**
     * Serializes a hint node to binary format.
     *
     * @param node Node to serialize.
     * @param buffer ByteBuffer for writing binary data.
     */
    static serialize(node, buffer) {
        buffer.writeUint8(binaryTypeCommon.BinaryTypeMarshallingMap.HintNode);
        buffer.writeUint8(hintCommon.HintNodeMarshallingMap.Name);
        valueSerializer.ValueSerializer.serialize(node.name, buffer, hintCommon.FREQUENT_HINTS_SERIALIZATION_MAP);
        if (!typeGuards.isUndefined(node.params)) {
            buffer.writeUint8(hintCommon.HintNodeMarshallingMap.Params);
            parameterListSerializer.ParameterListSerializer.serialize(node.params, buffer, hintCommon.FREQUENT_PLATFORMS_SERIALIZATION_MAP);
        }
        if (!typeGuards.isUndefined(node.start)) {
            buffer.writeUint8(hintCommon.HintNodeMarshallingMap.Start);
            buffer.writeUint32(node.start);
        }
        if (!typeGuards.isUndefined(node.end)) {
            buffer.writeUint8(hintCommon.HintNodeMarshallingMap.End);
            buffer.writeUint32(node.end);
        }
        buffer.writeUint8(constants.NULL);
    }
}

exports.HintSerializer = HintSerializer;
