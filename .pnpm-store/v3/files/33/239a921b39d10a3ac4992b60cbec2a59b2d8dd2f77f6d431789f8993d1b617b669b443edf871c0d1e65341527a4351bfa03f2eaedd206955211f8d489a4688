'use strict';

var baseDeserializer = require('../base-deserializer.js');
var constants = require('../../utils/constants.js');
var valueDeserializer = require('../misc/value-deserializer.js');
var hostnameListCommon = require('../../marshalling-utils/misc/hostname-list-common.js');
var binaryTypeCommon = require('../../marshalling-utils/misc/binary-type-common.js');

/* eslint-disable no-param-reassign */
class HostnameListDeserializer extends baseDeserializer.BaseDeserializer {
    /**
     * Deserializes a hostname list node from binary format.
     *
     * @param buffer ByteBuffer for reading binary data.
     * @param node Destination node.
     */
    static deserialize(buffer, node) {
        buffer.assertUint8(binaryTypeCommon.BinaryTypeMarshallingMap.HostnameListNode);
        node.type = 'HostnameList';
        let prop = buffer.readUint8();
        while (prop !== constants.NULL) {
            switch (prop) {
                case hostnameListCommon.HostnameListNodeMarshallingMap.Children:
                    node.children = new Array(buffer.readUint16());
                    // read children
                    for (let i = 0; i < node.children.length; i += 1) {
                        valueDeserializer.ValueDeserializer.deserialize(buffer, node.children[i] = {});
                    }
                    break;
                case hostnameListCommon.HostnameListNodeMarshallingMap.Start:
                    node.start = buffer.readUint32();
                    break;
                case hostnameListCommon.HostnameListNodeMarshallingMap.End:
                    node.end = buffer.readUint32();
                    break;
                default:
                    throw new Error(`Unknown property: ${prop}`);
            }
            prop = buffer.readUint8();
        }
    }
}

exports.HostnameListDeserializer = HostnameListDeserializer;
