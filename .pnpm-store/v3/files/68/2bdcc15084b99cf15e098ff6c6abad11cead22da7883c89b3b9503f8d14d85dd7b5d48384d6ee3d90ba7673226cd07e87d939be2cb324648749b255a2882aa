'use strict';

var constants = require('../../utils/constants.js');
var baseGenerator = require('../base-generator.js');

class ModifierGenerator extends baseGenerator.BaseGenerator {
    /**
     * Generates a string from a modifier (serializes it).
     *
     * @param modifier Modifier to generate string from
     * @returns String representation of the modifier
     */
    static generate(modifier) {
        let result = constants.EMPTY;
        if (modifier.exception) {
            result += constants.NEGATION_MARKER;
        }
        result += modifier.name.value;
        if (modifier.value !== undefined) {
            result += constants.MODIFIER_ASSIGN_OPERATOR;
            result += modifier.value.value;
        }
        return result;
    }
}

exports.ModifierGenerator = ModifierGenerator;
