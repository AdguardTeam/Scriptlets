'use strict';

var constants = require('../../utils/constants.js');
var baseGenerator = require('../base-generator.js');
var parameterListGenerator = require('../misc/parameter-list-generator.js');

class HintGenerator extends baseGenerator.BaseGenerator {
    /**
     * Converts a single hint AST to a string.
     *
     * @param hint Hint AST
     * @returns Hint string
     */
    static generate(hint) {
        let result = constants.EMPTY;
        result += hint.name.value;
        if (hint.params && hint.params.children.length > 0) {
            result += constants.OPEN_PARENTHESIS;
            result += parameterListGenerator.ParameterListGenerator.generate(hint.params, constants.COMMA);
            result += constants.CLOSE_PARENTHESIS;
        }
        return result;
    }
}

exports.HintGenerator = HintGenerator;
