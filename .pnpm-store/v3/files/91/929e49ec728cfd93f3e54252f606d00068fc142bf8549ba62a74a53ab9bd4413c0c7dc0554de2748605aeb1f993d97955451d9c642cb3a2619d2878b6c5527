'use strict';

var baseGenerator = require('../base-generator.js');
var constants = require('../../utils/constants.js');
var typeGuards = require('../../utils/type-guards.js');

class AgentGenerator extends baseGenerator.BaseGenerator {
    /**
     * Converts an adblock agent node to a string.
     *
     * @param value Agent node
     * @returns Raw string
     */
    static generate(value) {
        let result = constants.EMPTY;
        // Agent adblock name
        result += value.adblock.value;
        // Agent adblock version (if present)
        if (!typeGuards.isUndefined(value.version)) {
            // Add a space between the name and the version
            result += constants.SPACE;
            result += value.version.value;
        }
        return result;
    }
}

exports.AgentGenerator = AgentGenerator;
